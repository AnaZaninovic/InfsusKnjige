@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Infsus.Knjige.Models.Authors.AuthorViewModel>

<h2>Authors</h2>
<a asp-action="Create" class="btn btn-primary">Add Author</a>

<table class="table">
    <thead>
    <tr><th>Name</th><th>Surname</th><th>Actions</th></tr>
    </thead>
    <tbody>
    @foreach (var a in Model)
    {
        <tr>
            <td>@a.Name</td>
            <td>@a.Surname</td>
            <td>
                <a asp-action="Edit" asp-route-id="@a.AuthorId" class="btn btn-sm btn-warning">Edit</a>
                <form asp-action="Delete" method="post" asp-route-id="@a.AuthorId" style="display:inline">
                    <button class="btn btn-sm btn-danger" onclick="return confirm('Delete this author?')">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>