@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Infsus.Knjige.Models.Authors.CreateAuthorViewModel

<h2>@(ViewContext.RouteData.Values["action"].ToString() == "Edit" ? "Edit Author" : "Add Author")</h2>

<form asp-action="@ViewContext.RouteData.Values["action"]" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Biography"></label>
        <textarea asp-for="Biography" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>