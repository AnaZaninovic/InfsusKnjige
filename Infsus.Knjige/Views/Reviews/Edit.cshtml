@model Infsus.Knjige.Models.Reviews.EditReviewViewModel
@{
ViewData["Title"] = "Edit Review";
}

<h2>Edit Your Review</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ReviewId" />
    <input type="hidden" asp-for="BookId" />

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Text"></label>
        <textarea asp-for="Text" class="form-control"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Update Review</button>
    <a asp-controller="Reviews" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
