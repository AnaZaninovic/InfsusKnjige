@model Infsus.Knjige.Models.Reviews.CreateReviewViewModel

<h2>Write a Review</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="BookId">Select Book</label>
        <select asp-for="BookId" asp-items="Model.Books" class="form-control"></select>
        <span asp-validation-for="BookId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Text"></label>
        <textarea asp-for="Text" class="form-control"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <button class="btn btn-success">Submit</button>
    <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>