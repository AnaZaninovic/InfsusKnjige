@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Infsus.Knjige.Models.GenreViewModel>

<h2>Genres</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add Genre</a>

<table class="table">
    <thead>
    <tr><th>Name</th><th>Actions</th></tr>
    </thead>
    <tbody>
    @foreach (var genre in Model)
    {
    <tr>
        <td>@genre.GenreName</td>
        <td>
            <a asp-action="Edit" asp-route-id="@genre.GenreId" class="btn btn-sm btn-warning">Edit</a>
            <form asp-action="Delete" asp-route-id="@genre.GenreId" method="post" style="display:inline;">
                <button class="btn btn-sm btn-danger">Delete</button>
            </form>
        </td>
    </tr>
    }
    </tbody>
</table>
