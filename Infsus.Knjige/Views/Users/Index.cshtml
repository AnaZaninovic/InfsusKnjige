@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Infsus.Knjige.Models.UserViewModel>

<h2>Users</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Add User</a>
<table class="table">
    <thead>
    <tr><th>Email</th><th>Username</th><th>Actions</th></tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Username</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-warning btn-sm">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>