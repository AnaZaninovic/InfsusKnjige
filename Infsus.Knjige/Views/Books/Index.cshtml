@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Infsus.Knjige.Models.BookViewModel>

<h2>Books</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Book</a>

<table class="table">
    <thead>
    <tr><th>Title</th><th>Author</th><th>Actions</th></tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
    <tr>
        <td>@book.Title</td>
        <td>@book.AuthorName</td>
        <td>
            <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-info btn-sm">Details</a>
            <form asp-controller="Books" asp-action="Delete" method="post" asp-route-id="@book.BookId" style="display:inline">
                <button class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this book from the database?')">Delete</button>
            </form>
            <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-sm btn-warning">Edit</a>
        </td>
    </tr>
    }
    </tbody>
</table>
