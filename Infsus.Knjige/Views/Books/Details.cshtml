@model Infsus.Knjige.Models.BookDetailsViewModel

<h2>Book Details</h2>

<div>
    <h4>@Model.Title</h4>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>ISBN:</strong> @Model.ISBN</p>
    <p><strong>Publisher:</strong> @Model.Publisher</p>
    <p><strong>Date Published:</strong> @Model.DatePublished</p>
    <p><strong>Author:</strong> @Model.AuthorName</p>
    <p><strong>Genres:</strong> @string.Join(", ", Model.Genres.ToArray())</p>
</div>

<a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>